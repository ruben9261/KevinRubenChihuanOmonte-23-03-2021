@model List<KRCO.CoreProject.Model.Model.Photo>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table id="photo-table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Id
            </th>
            <th class="th-sm">
                title
            </th>
            <th class="th-sm">
                Image
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.id</td>
                <td><img src="@album.thumbnailUrl" class="img-fluid img-thumbnail" alt="Sheep"></td>
                <td>@album.title</td>
                <td><button onclick="getCommentsByPhotoId(@album.albumId)">Ver comentarios</button></td>
            </tr>
        }
    </tbody>
</table>


<div class="container">
    <div class="row">
        <div class="panel panel-default widget">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-comment"></span>
                <h3 class="panel-title">
                    Recent Comments
                </h3>
                <span class="label label-info">
                    78
                </span>
            </div>
            <div class="panel-body">
                <ul id="comment-render" class="list-group">
                    

                </ul>
        </div>
    </div>
</div>

<script id="comment-template" type="text/x-handlebars-template">
    {{#each comment}}
    <li class="list-group-item">
        <div class="row">
            <div class="col-xs-2 col-md-1">
                <img src="http://placehold.it/80" class="img-circle img-responsive" alt="" />
            </div>
            <div class="col-xs-10 col-md-11">
                <div>
                    <a href="http://www.jquery2dotnet.com/2013/10/google-style-login-page-desing-usign.html">
                        {{name}}
                    </a>
                    <div class="mic-info">
                        Mail: <a href="#">{{email}}</a> @DateTime.Today
                    </div>
                </div>
                <div class="comment-text">
                    {{body}}
                </div>
                <div class="action">
                    <button type="button" class="btn btn-primary btn-xs" title="Edit">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button type="button" class="btn btn-success btn-xs" title="Approved">
                        <span class="glyphicon glyphicon-ok"></span>
                    </button>
                    <button type="button" class="btn btn-danger btn-xs" title="Delete">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </div>
            </div>
        </div>
    </li>
    {{/each}}
</script>

